<% @posts.each do |post| %>
  <p>
    <%= post.name %><br>
    <%= image_tag post.image.url %>
  </p>
<% end %>
<hr>
<%= form_for :post, url: 'posts/create'  do |f| %>
  <p><%=f.label "タイトル" %><br><%= f.text_field :title, placeholder: 'タイトル' %></p>
  <p><%=f.label "画像名" %><br><%= f.text_field :name, placeholder: '画像名' %></p>
  <p><%=f.label "備考" %><br><%= f.text_field :remarks, placeholder: '備考' %></p>
  <p><%=f.label "画像をアップロード" %><br><%= f.file_field :image %></p>
  <p><%= f.submit value: '投稿' %></p>
<% end %>